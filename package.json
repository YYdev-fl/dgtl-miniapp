{
  "name": "dgtl-miniapp",
  "version": "1.0.0",
  "description": "Digital P2E Game",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:bot\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && PORT=3000 npm run dev",
    "dev:bot": "cd bot && npm run dev",
	
    "tunnel": "ngrok http 3000",

    "build": "cd client && npm run build",

    "start": "concurrently \"npm:start:server\" \"npm:start:client\" \"npm:start:bot\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "start:bot": "cd bot && npm start",

    "install:all": "concurrently \"cd server && npm install\" \"cd client && npm install\" \"cd bot && npm install\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanZhutyaev/dgtl-miniapp.git"
  },
  "bugs": {
